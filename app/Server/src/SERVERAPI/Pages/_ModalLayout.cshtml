<div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-large" role="document" id="divSize">
        <div class="modal-content">
            @* This puts the header as the bar on the Modal *@
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <h2 class="modal-title">@ViewBag.HeaderTitle</h2>
                    </div>
                    <div class="col-md-7">
                        <h2 class="modal-title" style="font-size: 1.4rem; padding-top: 3px;">@ViewBag.HeaderSideTitle</h2>
                    </div>
                </div>
            </div>
            <div class="modal-body" role="dialog">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@RenderSection("Scripts", required: false)