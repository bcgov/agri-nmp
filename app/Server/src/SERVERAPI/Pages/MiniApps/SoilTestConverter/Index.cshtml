@page
@model SERVERAPI.Pages.MiniApps.Index
@{
    ViewData["Title"] = "Soil Test Converter";
    Layout = "_MiniAppLayout";
}
<div class="container" style="margin-top:30px">
    <div class="step-forms col-sm-12">
        <div class="form-box">
            <div class="form-box-header clearfix">
                <div class="form-box-heading">Soil Test P Converter</div>
            </div>
            <div class="form-box-body">
                <div class="form-box-fields">
                    <div class="row">
                        @Model.Data.SoilTestConverterUserInstruction1
                    </div>
                    <form method="post">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="laboratory">Laboratory</label>
                                <select class="form-control" asp-for="@Model.Data.SelectLaboratoryOption"
                                        asp-items="@Model.Data.LaboratoryOptions" id="ddlMth">
                                    <option value="0">select</option>
                                </select>
                                <span asp-validation-for="Data.SelectLaboratoryOption" class=""></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label for="pHValue">pH</label>
                                <input class="form-control" type="text" asp-for="Data.PH" />
                                <span asp-validation-for="Data.PH" class=""></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-2">
                                <label for="phosPhorous">Phosphorus (ppm)</label>
                                <input class="form-control" type="text" asp-for="Data.Phosphorous" />
                                <span asp-validation-for="Data.Phosphorous" class=""></span>
                            </div>

                            @if (Model.Result.ShowKelowna)
                            {
                                <div class="form-group col-sm-3">
                                    <label for="kelowna">Kelowna Method (ppm)</label>
                                    <input class="form-control" readonly type="number" asp-for="Result.KelownaConversion" />
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <input class="btn btn-primary" type="submit" value="Convert" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="form-box" style="border:none">
        <div class="row">
            <img class="col-sm-1" src="~/images/lightbulb_icon-01.png" />
            @*<div class="col-sm-6 row">
                    <h4>@Model.Data.SoilTestConverterUserInstruction2</h4>
                </div>*@
            <div class="col-sm-6 row">
                <h2>@Model.Data.SoilTestConverterUserInstruction2</h2>
                <div class="col-sm-11">
                    @Model.Data.SoilTestConverterUserInstruction3
                </div>
            </div>
            <div class="col-sm-5">
                <a style="cursor:default" onclick="window.open('@Model.Data.SoilTestInformationButtonLink');" formtarget="_blank">@Model.Data.SoilTestingInformation</a>
                <br />
                <a style="cursor:default" onclick="window.open('@Model.Data.BCNutrientManagementCalculatorButtonLink');" formtarget="_blank">@Model.Data.BCNutrientManagementCalculator</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    </script>
}