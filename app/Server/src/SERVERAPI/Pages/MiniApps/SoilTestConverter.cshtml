@page
@model SERVERAPI.Pages.MiniApps.SoilTestConverter
@{
    ViewData["Title"] = "SoilTestConverter";
    Layout = "~/Pages/MiniApps/_miniAppLayout.cshtml";
}
<div class="container" style="margin-top:30px">
    <div class="step-forms col-sm-12">
        <div class="form-box">
            <div class="form-box-header clearfix">
                <div class="form-box-heading">Soil test P Converter</div>
            </div>
            <div class="form-box-body">
                <div class="form-box-fields">
                    <div class="row">
                        @Model.Data.SoilTestConverterUserInstruction1
                    </div>
                    <form method="post">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for="laboratory">Laboratory</label>
                                <select class="form-control" asp-for="@Model.Data.SelectLaboratoryOption"
                                        asp-items="@Model.Data.LaboratoryOptions" id="ddlMth">
                                    <option value="0">select</option>
                                </select>
                                <span asp-validation-for="Data.SelectLaboratoryOption" class=""></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label for="pHValue">pH</label>
                                <input class="form-control" type="text" asp-for="Data.PH" />
                                <span asp-validation-for="Data.PH" class=""></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-2">
                                <label for="phosPhorous">Phosphorus (ppm)</label>
                                <input class="form-control" type="text" asp-for="Data.Phosphorous" />
                                <span asp-validation-for="Data.Phosphorous" class=""></span>
                            </div>

                            @if (Model.Result.ShowKelowna)
                            {
                                <div class="form-group col-sm-3">
                                    <label for="kelowna">Kelowna Method (ppm)</label>
                                    <input class="form-control" readonly type="number" asp-for="Result.KelownaConversion" />
                                </div>
                            }
                        </div>
                        <div class="modal-footer">
                            <input class="btn btn-primary" type="submit" value="Convert" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="step-forms col-sm-12">
        <div class="form-box" style="border:0px !important;">
            <div class="row">
                @Model.Data.SoilTestConverterUserInstruction2
            </div>
            <div class="row">
                &nbsp;
            </div>
            <div class="row">
                <div>
                    <input class="form-group col-sm-5 btn btn-primary" onclick="window.open('@Model.Data.SoilTestInformationButtonLink');" formtarget="_blank" value="@Model.Data.SoilTestingInformation" />
                </div>
                <div class="form-group col-sm-2">
                    &nbsp;
                </div>
                <div>
                    <input class="form-group col-sm-5 btn btn-primary" onclick="window.open('@Model.Data.BCNutrientManagementCalculatorButtonLink');" formtarget="_blank" value="@Model.Data.BCNutrientManagementCalculator" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    </script>
}