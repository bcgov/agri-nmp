@model SERVERAPI.ViewModels.InfoAgriViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="myModalLabel">Information</h2>
    </div>

    <form asp-action="InfoAgri" asp-controller="Nutrients" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    @Html.Raw(Model.text)
                </div>
            </div>
            <br />
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Close</button>
        </div>
    </form>
</div>
