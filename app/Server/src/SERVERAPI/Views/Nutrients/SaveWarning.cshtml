@model SERVERAPI.ViewModels.SaveWarningViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Warning</h4>
    </div>

    <form asp-action="SaveWarning" asp-controller="Nutrients" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target" id="warnForm">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p class="text-danger">@Model.msg</p>
            </div>
            <br />
            <br />
        </div>
        <div class="modal-footer">
            <button id="canBtn" class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="button" value="Download file" onclick="location.href='@Url.Action("Download", "Home")';this.style.display = 'none';document.getElementById('canBtn').style.display = 'none';" />
            <input class="btn btn-primary" type="button" value="Continue" onclick="window.location.href = '@Model.target'" />
        </div>
        @Html.HiddenFor(x => x.target)
    </form>
</div>
