@model SERVERAPI.ViewModels.OtherDetailsViewModel

@{
    Layout = null;
}
<div id="target">
    <form asp-action="OtherDetails" asp-controller="Nutrients" id="modForm" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h2 class="modal-title" id="myModalLabel">Other Details - @Model.title</h2>
        </div>

        <div class="modal-body">
            <div class="Table">
                <div class="TableBody">
                    <div class="Row">
                        <div class="Cell2" style="width:25%; text-align:center"></div>
                        <div class="Cell2" style="width:30%; text-align:center">
                            <span style="font-weight: bold">Available This Yr (lb/ac)</span>
                            <a href="#" data-toggle="tooltip" title="@Model.ExplainCalculateOtherNutrientAvailableThisYear" id="toolTipExplainCalculateOtherNutrientAvailableThisYear">
                                <span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="Explanation of nutrients available this year" style="font-size:20px; padding-top:5px"></span>
                            </a>
                        </div>
                        <div class="Cell2" style="width:5%">
                            &nbsp;
                        </div>
                        <div class="Cell2" style="width:30%; text-align:center">
                            <span style="font-weight: bold">Available Long Term (lb/ac)</span>
                            <a href="#" data-toggle="tooltip" title="@Model.ExplainCalculateOtherNutrientAvailbleLongTerm" id="toolTipExplainCalculateOtherNutrientAvailbleLongTerm">
                                <span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="Explanation of Nutrients available long term" style="font-size:20px; padding-top:5px"></span>
                            </a>
                        </div>
                    </div>
                    <div class="Row">
                        <div class="Cell2" style="width:25%;">
                            <div class="form-group col-sm-12" style="margin-bottom:0px">
                                <label asp-for="source" style="padding-right:5px">Nutrient Source</label>
                                <a href="#" data-toggle="tooltip" title="@Model.ExplainCalculateOtherNutrientSource" id="toolTipExplainCalculateOtherNutrientSource">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="Explanation of Nutrient Source" style="font-size:20px; padding-top:5px"></span>
                                </a>
                                <input class="form-control" asp-for="source" id="source" type="text" placeholder="@Model.placehldr" />
                            </div>
                        </div>
                        <div class="Cell2" style="width:30%; text-align:center">
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <label asp-for="ltN">N</label>
                                <input class="form-control" asp-for="ltN" id="ltN" type="text" />
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <label for="phospherous">P<sub>2</sub>O<sub>5</sub></label>
                                <input class="form-control" asp-for="ltP" id="phospherous" type="text" />
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <label asp-for="ltK">K<sub>2</sub>O</label>
                                <input class="form-control" asp-for="ltK" id="ltK" type="text" />
                            </div>
                        </div>
                        <div style="width:5%;">
                            &nbsp;
                        </div>
                        <div class="Cell2" style="width:30%; text-align:center">
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <label for="yrN">N</label>
                                <input class="form-control" asp-for="yrN" id="yrN" type="text" />
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <label asp-for="yrP">P<sub>2</sub>O<sub>5</sub></label>
                                <input class="form-control" asp-for="yrP" id="yrP" type="text" />
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <label asp-for="yrK">K<sub>2</sub>O</label>
                                <input class="form-control" asp-for="yrK" id="yrK" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="Row">
                        <div class="Cell2" style="width:25%;">
                            <div class="form-group col-sm-12" style="margin-bottom:0px">
                                <span asp-validation-for="source" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="Cell2" style="width:30%; text-align:center">
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <span asp-validation-for="ltN" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <span asp-validation-for="ltP" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <span asp-validation-for="ltK" class="text-danger"></span>
                            </div>
                        </div>
                        <div style="width:5%;">
                            &nbsp;
                        </div>
                        <div class="Cell2" style="width:30%; text-align:center">
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <span asp-validation-for="yrN" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <span asp-validation-for="yrP" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4" style="margin-bottom:0px">
                                <span asp-validation-for="yrK" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" id="ok_button">@Model.btnText</button>
        </div>
        @Html.HiddenFor(x => x.title)
        @Html.HiddenFor(x => x.id)
        @Html.HiddenFor(x => x.fieldName)
        @Html.HiddenFor(x => x.btnText)
        @Html.HiddenFor(x => x.url)
        @Html.HiddenFor(x => x.urlText)
        @Html.HiddenFor(x => x.placehldr)
    </form>
</div>

<script type="text/javascript">
    

    $(document).ready(function () {
        $('#toolTipExplainCalculateOtherNutrientAvailbleLongTerm').tooltip({
            template: toolTipClickableInnerHtml,
            html: true,
            trigger: 'manual'
        });
    });

    //Using triggerToolTip function from ~/lib/site.js
    $(document).ready(function () {
        $('#toolTipExplainCalculateOtherNutrientAvailbleLongTerm').click(function () {
            triggerToolTip($('#toolTipExplainCalculateOtherNutrientAvailbleLongTerm'));
        });
    })

    $(document).ready(function () {
        $('#toolTipExplainCalculateOtherNutrientAvailableThisYear').tooltip({
            template: toolTipClickableInnerHtml,
            html: true,
            trigger: 'manual'
        });
    });

    //Using triggerToolTip function from ~/lib/site.js
    $(document).ready(function () {
        $('#toolTipExplainCalculateOtherNutrientAvailableThisYear').click(function () {
            triggerToolTip($('#toolTipExplainCalculateOtherNutrientAvailableThisYear'));
        });
    })

    $(document).ready(function () {
        $('#toolTipExplainCalculateOtherNutrientSource').tooltip({
            template: toolTipClickableInnerHtml,
            html: true,
            trigger: 'manual'
        });
    });

    //Using triggerToolTip function from ~/lib/site.js
    $(document).ready(function () {
        $('#toolTipExplainCalculateOtherNutrientSource').click(function () {
            triggerToolTip($('#toolTipExplainCalculateOtherNutrientSource'));
        });
    })

</script>

