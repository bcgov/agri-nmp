@model SERVERAPI.ViewModels.FertigationDetailsViewModel

@{
    Layout = null;
}

<style>

</style>

<div id="target">
    <form asp-action="FertigationDetails" asp-controller="Nutrients" id="modForm" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h2 class="modal-title" id="myModalLabel">Fertigation Details - @Model.title</h2>
        </div>

        <div class="modal-body">
            <div class="row">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                <div class="title">Provide Product Details</div>
                <div class="form-group col-sm-3" style="width:150px;">
                    <label for="ddlMan">Fertilizer Type</label>
                    <select class="form-control" id="ddlMan">
                        <option>select</option>
                    </select>
                </div>
                <div class="form-group col-sm-3" style="width:150px;">
                    <label for="ddlMan">Fertilizer</label>
                    <select class="form-control" id="ddlMan2">
                        <option>select</option>
                    </select>
                    <span asp-validation-for="selFertOption" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-3 row" style="margin-right:0px; padding-right:0px">
                    <div class="col-sm-4" style="margin-right:0px; padding-right:0px; width:150px;">
                        <label for="rate">Product Rate</label>
                        <div>
                            <input class="form-control" id="rate" type="text" style="margin-right:0px; padding-right:0px"/>
                        </div>
                    </div>
                    <div class="col-sm-8" style="margin-left:0px; padding-left:0px">
                        <div style="display:table; width:100%">
                        <div style="display:table-row">
                            <label for="ddlRate">Units</label>
                        </div>
                        <div style="display:table-row">
                            <select class="form-control" id="ddlRate" style="width:70%; display:inline; vertical-align:top">
                                <option>select</option>
                            </select>
                        </div>
                    </div>
                  </div>
                </div>
                <div class="form-group col-sm-3" style="margin-right:0px; padding-right:0px">
                    <div class="col-sm-4">
                        <label for="rate">Density</label>
                        <div>
                            <input class="form-control" id="rate" type="text" />
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div style="display:table; width:100%">
                        <div style="display:table-row">
                            <label for="ddlRate">Units</label>
                        </div>
                        <div style="display:table-row">
                            <select class="form-control" id="ddlRate2" style="width:70%; display:inline; vertical-align:top">
                                <option>select</option>
                            </select>
                        </div>
                    </div>
                    </div>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <div class="title">Provide Application Details</div>
                    <div class="form-group col-sm-2" style="margin-right:0px; padding-right:0px; width:150px">
                        <label for="rate">Injection Rate</label>
                        <div>
                            <input class="form-control" id="rate" type="text" />
                        </div>
                    </div>
                    <div class="form-group col-sm-3" style="margin-left:0px; padding-left:0px">
                        <div style="display:table; width:100%">
                            <div style="display:table-row">
                                <label for="ddlRate">Units</label>
                            </div>
                            <div style="display:table-row">
                                <select class="form-control" id="ddlRate" style="width:70%; display:inline; vertical-align:top">
                                    <option>select</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-sm-2" style="margin-right:0px; padding-right:0px">
                        <label for="rate">Proposed Number of Fertigation Per Season</label>
                        <div>
                            <input class="form-control" id="rate" type="text" />
                        </div>
                    </div>
                    <div class="form-group col-sm-4">
                        <label for="ddlMan">Fertigation Scheduling</label>
                        <select class="form-control" id="ddlMan">
                            <option>select</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-3">
                      <div class="input-group">
                          <input class="form-control" asp-for="applDate" id="applDate" type="date" />
                      </div>
                      <span asp-validation-for="applDate" class="text-danger"></span>
                    </div>
                  </div>
                  <div style="clear:both"></div>
                  <div id="btnGrp">
                    <span class="pull-right">
                      <button class="btn" type="button" data-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-primary" id="calc_button">Calculate</button>   
                    </span>
                  </div>
                </div>
              </div>
<!-- ********************************************  /Input Section> / <Calculated Results ********************************************* -->
              <hr style="height:1px;border:none;color:blue;background-color:lightblue;padding:0" />
              
              <div class="row">
                <div class="form-group">
                  <div class="form-group col-sm-4">
                      <div class="input-group">
                          <label >
                              Total Product Volume per fertigation
                          </label>
                          <input class="form-control" type="text" />
                      </div>
                  </div>
                  <div class="form-group col-sm-4">
                      <div class="input-group">
                          <label >
                              Total product volume per growing season
                          </label>
                          <input class="form-control" type="text" />
                      </div>
                  </div>
                  <div class="form-group col-sm-4">
                      <div class="input-group">
                          <label >
                              Fertigation Time (Minutes)
                          </label>
                          <input class="form-control" type="text" />
                      </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="form-group">
                  <div class="form-group col-sm-3d" style="margin:5px">
                    <div class="form-group col-sm-3">
                      <div class="Table">
                          <div class="Title">
                              <p>Applied Nutrients Per Fetigation (lb/ac)</p>
                          </div>
                          <div class="Heading">
                              <div class="Cell">
                                  <p>N</p>
                              </div>
                              <div class="Cell">
                                  <p>P<sub>2</sub>O<sub>5</sub></p>
                              </div>
                              <div class="Cell">
                                  <p>K<sub>2</sub>O</p>
                              </div>
                          </div>
                          <div class="Row">
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="form-group col-sm-3" style="margin:5px">
                      <div class="Table">
                          <div class="Title">
                              <p>Total Applied Nutrients (lb/ac)</p>
                          </div>
                          <div class="Heading">
                              <div class="Cell">
                                  <p>N</p>
                              </div>
                              <div class="Cell">
                                  <p>P<sub>2</sub>O<sub>5</sub></p>
                              </div>
                              <div class="Cell">
                                  <p>K<sub>2</sub>O</p>
                              </div>
                          </div>
                          <div class="Row">
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="form-group col-sm-3" style="margin:5px">
                      <div class="Table">
                          <div class="Title">
                              <p>Applied Nutrients Per Fetigation (lb/ac)</p>
                          </div>
                          <div class="Heading">
                              <div class="Cell">
                                  <p>N</p>
                              </div>
                              <div class="Cell">
                                  <p>P<sub>2</sub>O<sub>5</sub></p>
                              </div>
                              <div class="Cell">
                                  <p>K<sub>2</sub>O</p>
                              </div>
                          </div>
                          <div class="Row">
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                              <div class="Cell" style="text-align:center">
                                0
                              </div>
                          </div>
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>

        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" id="submit_button">Add to Field</button>
        </div>
        @Html.HiddenFor(x => x.fieldName)
        @Html.HiddenFor(x => x.selFertOption)
    </form>
</div>

<script>
        $(document).ready(function () {

            $('#applDate').datepicker({
                useCurrent: true,
                autoPick: false,
                format: "dd-M-yyyy",
                startView: 1,
                minViewMode: 1,
                autoclose: true
        });
    });
</script>