@model ManureStorageDeleteViewModel
@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="myModalLabel">@Model.Title</h2>
    </div>

    <form asp-action="ManureStorageDelete" asp-controller="ManureManagement" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    @if (Model.StructureId.HasValue)
                    {
                        @Model.StorageStructureName
                        <text> from </text>
                    }
                    @Model.StorageSystemName<br/>
                </div>
            </div>
            <br />
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="submit" value="Delete" />
        </div>
        @Html.HiddenFor(x => x.Title)
        @Html.HiddenFor(x => x.SystemId)
        @Html.HiddenFor(x => x.StructureId)
        @Html.HiddenFor(x => x.Target)
    </form>
</div>