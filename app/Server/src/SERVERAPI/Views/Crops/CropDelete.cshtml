@model SERVERAPI.ViewModels.CropDeleteViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="myModalLabel">Crop Details - @Model.act</h2>
    </div>

    <form asp-action="CropDelete" asp-controller="Crops" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cropName"></label>
                <div>
                    @Model.cropName<br />
                    <span asp-validation-for="cropName"></span>
                </div>
            </div>
            <br />
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="submit" value="Delete" />
        </div>
        @Html.HiddenFor(x => x.fldName)
        @Html.HiddenFor(x => x.act)
        @Html.HiddenFor(x => x.id)
    </form>
</div>