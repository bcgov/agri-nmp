@model SERVERAPI.ViewModels.CompostDeleteViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Manure/Compost Details - @Model.act</h4>
    </div>

    <form asp-action="CompostDelete" asp-controller="Manure" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="manureName"></label>
                <div>
                    @Model.manureName<br />
                    <span asp-validation-for="manureName"></span>
                </div>
            </div>
            <br />
            @if (!string.IsNullOrEmpty(Model.warning))
            {
                <div class="form-group">
                    <label class="text-danger">@Model.warning</label>
                </div>
                <br />
            }
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="submit" value="Delete" />
        </div>
        @Html.HiddenFor(x => x.manureName)
        @Html.HiddenFor(x => x.act)
        @Html.HiddenFor(x => x.id)
        @Html.HiddenFor(x => x.target)
        @Html.HiddenFor(x => x.warning)
    </form>
</div>
