@model SERVERAPI.ViewModels.NewWarningViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Warning - Unsaved Data</h4>
    </div>

    <form asp-action="NewWarning" asp-controller="Home" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target" id="warnForm">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<p class="text-danger">@Model.msg</p>*@
                @Html.Raw(Model.msg)
            </div>
            <br />
            <br />
        </div>
        <div class="modal-footer">
            <div style="display:inline-block">
                <button id="canBtn" class="btn" type="button" data-dismiss="modal">Cancel</button>
                <input id="download" class="btn btn-primary" type="button" value="Download file" onclick="location.href='@Url.Action("Download", "Home")';this.style.display = 'none';document.getElementById('canBtn').style.display = 'none';" />
            </div>
            <input class="btn btn-primary" type="submit" value="Continue" />
        </div>
        @Html.HiddenFor(x => x.msg)
    </form>
</div>
