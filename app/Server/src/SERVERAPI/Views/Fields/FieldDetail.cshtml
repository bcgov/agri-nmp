@model SERVERAPI.ViewModels.FieldDetailViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="myModalLabel">Field Details - @Model.act</h2>
    </div>

    <form asp-action="FieldDetail" asp-controller="Fields" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fieldName"></label>
                <div>
                    <input asp-for="fieldName" class="col-sm-6" />
                    <span asp-validation-for="fieldName"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="fieldArea"></label>
                <div>
                    <input asp-for="fieldArea" class="col-sm-2" />
                    <div style="padding-top:5px">&nbsp;Acres&nbsp;</div>
                    <span asp-validation-for="fieldArea"></span>
                </div>
            </div>
            @if (Model.showPrevYrManureOption)
            {
                <div class="form-group" style="max-width:350px">
                    <label asp-for="selPrevYrManureOption">Manure application in previous years</label>
                    <select class="form-control" asp-for="selPrevYrManureOption" asp-items="@(new SelectList(Model.selPrevYrManureOptions, "FieldManureApplicationHistory", "Name"))">
                        <option>select</option>
                    </select>
                    <span asp-validation-for="selPrevYrManureOption"></span>
                </div>
                <br />
            }
            <div class="form-group">
                <label asp-for="fieldComment"></label>
                <div>
                    <textarea asp-for="fieldComment" rows="2" cols="80" style="resize:none" placeholder="@Model.placehldr"></textarea>
                    <span asp-validation-for="fieldComment"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
        @Html.HiddenFor(x => x.userDataField)
        @Html.HiddenFor(x => x.act)
        @Html.HiddenFor(x => x.currFieldName)
        @Html.HiddenFor(x => x.target)
        @Html.HiddenFor(x => x.cntl)
        @Html.HiddenFor(x => x.actn)
        @Html.HiddenFor(x => x.currFld)
        @Html.HiddenFor(x => x.placehldr)
    </form>
</div>