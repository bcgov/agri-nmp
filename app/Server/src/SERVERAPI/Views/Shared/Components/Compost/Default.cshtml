@model CompostViewModel
<div>
    @if (Model.composts.Count == 0)
    {

        <div class="form-box">
            <div class="form-box-header clearfix">
                <legend class="form-box-heading">@Model.compostMsg</legend>
            </div>
            <div class="form-box-body">
                <div class="row">
                    <div class="col-sm-8">
                    </div>
                    <div class="col-sm-4">
                        <div>
                            <b>Add a Nutrient Analysis for:</b>
                            <a href="#" data-toggle="tooltip" title="@Model.ExplainMaterialsNeedingNutrientAnalysisMessage" id="toolTipExplainMaterialsNeedingNutrientAnalysis">
                                <span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="Explanation of Materials needing Nutrient Analysis" style="font-size:20px; padding-top:5px"></span>
                            </a>
                        </div>
                        @foreach (var storageSystemAndImportedManureNotStored in Model.UnallocatedStorageAndImportedManureNames)
                        {
                            <div class="form-row">
                                @storageSystemAndImportedManureNotStored
                            </div>
                        }
                    </div>
                </div>
                <div class="form-box-table">
                    <div class="form-box-table-row form-box-table-header row row-eq-height">
                        <div class="col-sm-12 form-box-table-cell"></div>
                    </div>
                </div>
                <div class="form-box-table-first text-center">
                    <button class="btn btn-default" type="button" data_modal="" data-type="@Url.Action("CompostDetails", "ManureManagement", new {target = "#compostmanure"})">Add Nutrient Analysis</button>
                </div>
            </div>
        </div>
    }

    @if (Model.composts.Count() > 0)
    {
        <div class="form-box">
            <div class="form-box-header clearfix">
                <legend class="form-box-heading">@Model.compostMsg</legend>
            </div>
            <div class="form-box-body">
                <div class="row">
                    <div class="col-sm-8">
                    </div>
                    <div class="col-sm-4">
                        @if (Model.UnallocatedStorageAndImportedManureNames.Count != 0)
                        {
                            <div>
                                <b>Add a Nutrient Analysis for:</b>
                                <a href="#" data-toggle="tooltip" title="@Model.ExplainMaterialsNeedingNutrientAnalysisMessage" id="toolTipExplainMaterialsNeedingNutrientAnalysis">
                                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="Explanation of Materials needing Nutrient Analysis" style="font-size:20px; padding-top:5px"></span>
                                </a>
                            </div>
                            @foreach (var storageSystemAndImportedManureNotStored in Model.UnallocatedStorageAndImportedManureNames)
                            {
                                <div class="form-row">
                                    @storageSystemAndImportedManureNotStored
                                </div>
                            }
                        }
                    </div>
                </div>
                <br />
                <div class="form-box-table">
                    <div class="form-box-table-header form-box-table-row row row-eq-height">
                        <div class="col-sm-3 form-box-table-cell" style="vertical-align:middle">
                            <strong>Source of Material</strong>
                        </div>
                        <div class="col-sm-3 form-box-table-cell" style="vertical-align:middle">
                            <strong>Material Type</strong>
                        </div>
                        <div class="col-sm-4 form-box-table-cell">
                            <div class="col-sm-5 form-box-table-cell">
                                <strong>Moisture(%)</strong>
                            </div>
                            <div class="col-sm-2 form-box-table-cell">
                                <strong>N(%)</strong>
                            </div>
                            <div class="col-sm-2 form-box-table-cell">
                                <strong>P(%)</strong>
                            </div>
                            <div class="col-sm-2 form-box-table-cell">
                                <strong>K(%)</strong>
                            </div>
                        </div>
                        <div class="col-sm-2 form-box-table-cell">
                        </div>
                    </div>
                    @foreach (var item in Model.composts)
                    {
                        <div class="form-box-table-row row row-eq-height">
                            <div class="col-sm-3 form-box-table-cell" style="vertical-align:middle">
                                @item.SourceOfMaterialName
                            </div>
                            <div class="col-sm-3 form-box-table-cell" style="vertical-align:middle">
                                @item.Name
                            </div>
                            <div class="col-sm-4 form-box-table-cell">
                                <div class="col-sm-5 form-box-table-cell">
                                    @item.Moisture
                                </div>
                                <div class="col-sm-2 form-box-table-cell">
                                    @item.Nitrogen.ToString("#0.00")
                                </div>
                                <div class="col-sm-2 form-box-table-cell">
                                    @item.Phosphorous.ToString("#0.00")
                                </div>
                                <div class="col-sm-2 form-box-table-cell">
                                    @item.Potassium.ToString("#0.00")
                                </div>
                            </div>
                            <div class="col-sm-2 form-box-table-cell">
                                <button title="Edit Nutrient Analysis" aria-label="Edit" class="form-box-table-button" type="button" data_modal="" data-type="@Url.Action("CompostDetails", "ManureManagement", new {id = item.Id, target = "#compostmanure"})">
                                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px" height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" stroke-width="2"><g stroke-width="2" transform="translate(0, 0)"><line data-cap="butt" data-color="color-2" fill="none" stroke="#444444" stroke-width="2" stroke-miterlimit="10" x1="14.5" y1="4.5" x2="19.5" y2="9.5" stroke-linejoin="miter" stroke-linecap="butt"></line> <line data-cap="butt" data-color="color-2" fill="none" stroke="#444444" stroke-width="2" stroke-miterlimit="10" x1="3" y1="16" x2="8" y2="21" stroke-linejoin="miter" stroke-linecap="butt"></line> <path fill="none" stroke="#444444" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" d="M8,21l-6,1l1-6 L16.586,2.414c0.781-0.781,2.047-0.781,2.828,0l2.172,2.172c0.781,0.781,0.781,2.047,0,2.828L8,21z" stroke-linejoin="miter"></path></g></svg>
                                </button>
                                <button title="Delete Nutrient Analysis" aria-label="Delete" class="form-box-table-button" type="button" data_modal="" data-type="@Url.Action("CompostDelete", "ManureManagement", new {id = item.Id, target = "#compostmanure"})">
                                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="24px" height="24px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" stroke-width="2"><g stroke-width="2" transform="translate(0, 0)"><polyline fill="none" stroke="#444444" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" points="20,9 20,23 4,23 4,9 " stroke-linejoin="miter"></polyline> <line fill="none" stroke="#444444" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" x1="1" y1="5" x2="23" y2="5" stroke-linejoin="miter"></line> <line data-color="color-2" fill="none" stroke="#444444" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" x1="12" y1="12" x2="12" y2="18" stroke-linejoin="miter"></line> <line data-color="color-2" fill="none" stroke="#444444" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" x1="8" y1="12" x2="8" y2="18" stroke-linejoin="miter"></line> <line data-color="color-2" fill="none" stroke="#444444" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" x1="16" y1="12" x2="16" y2="18" stroke-linejoin="miter"></line> <polyline fill="none" stroke="#444444" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" points="8,5 8,1 16,1 16,5 " stroke-linejoin="miter"></polyline></g></svg>
                                </button>
                            </div>
                        </div>
                    }
                    <div class="form-box-table-add text-right form-box-table-row row">
                        <button class="btn btn-default" type="button" data_modal="" data-type="@Url.Action("CompostDetails", "ManureManagement", new {target = "#compostmanure"})">Add another Nutrient Anaylsis</button>
                    </div>
                </div>
            </div>
        </div>

        @for (int i = 0; i < Model.composts.Count; i++)
        {
            @*@Html.Hidden("fieldName[" + i + "]", Model.fields[i].fieldName)
                @Html.Hidden("area[" + i + "]", Model.fields[i].area)
                @Html.Hidden("comment[" + i + "]", Model.fields[i].comment)*@
        }
    }
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#toolTipExplainMaterialsNeedingNutrientAnalysis').tooltip({
            template: toolTipClickableInnerHtml,
            html: true,
            trigger: 'manual'
        });
    });

    //Using triggerToolTip function from ~/lib/site.js
    $(document).ready(function () {
        $('#toolTipExplainMaterialsNeedingNutrientAnalysis').click(function () {
            triggerToolTip($('#toolTipExplainMaterialsNeedingNutrientAnalysis'));
        });
    })
</script>