@model SERVERAPI.ViewModels.RancherFieldDetailViewModel

@{
    Layout = null;
}
<div id="target">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="myModalLabel">Field Details - @Model.Act</h2>
    </div>

    <form asp-action="RancherFieldDetail" asp-controller="RancherFields" data-ajax="true" data-ajax-method="POST" data-ajax-mode="REPLACE-WITH" data-ajax-update="#target">
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FieldName"></label>
                <div>
                    <input asp-for="FieldName" class="col-sm-6" />
                    <span asp-validation-for="FieldName"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FieldArea"></label>
                <div>
                    <input asp-for="FieldArea" class="col-sm-2" />
                    <div style="padding-top:5px">&nbsp;Acres&nbsp;</div>
                    <span asp-validation-for="FieldArea"></span>
                </div>
            </div>
            <div class="form-group" style="max-width:350px">
                <label asp-for="SelectPrevYrManureOption">Manure application in previous years</label>
                <select class="form-control" asp-for="SelectPrevYrManureOption" asp-items="@(new SelectList(Model.SelectPrevYrManureOptions,"FieldManureApplicationHistory","Name"))">
                    <option>select</option>
                </select>
                <span asp-validation-for="SelectPrevYrManureOption"></span>
            </div>
            <div class="form-group" style="margin-width: 350px;">
                <label style="padding-right: 20px">
                    <input asp-for="IsSeasonalFeedingArea" type="checkbox" />
                </label>
                <label i="labelIsSeasonalFeedingArea">This is a seasonal feeding area</label>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FieldComment"></label>
                <div>
                    <textarea asp-for="FieldComment" rows="2" cols="80" style="resize:none" placeholder="@Model.Placehldr"></textarea>
                    <span asp-validation-for="FieldComment"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
        @Html.HiddenFor(x => x.UserDataField)
        @Html.HiddenFor(x => x.Act)
        @Html.HiddenFor(x => x.CurrFieldName)
        @Html.HiddenFor(x => x.Target)
        @Html.HiddenFor(x => x.Cntl)
        @Html.HiddenFor(x => x.Actn)
        @Html.HiddenFor(x => x.CurrFld)
        @Html.HiddenFor(x => x.Placehldr)
    </form>
</div>